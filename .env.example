# Personal Work Intelligence System - Environment Variables
# Copy to .env and fill in your values

# === Google Workspace (Chat, Calendar, Drive, Sheets) ===
# Download OAuth credentials from Google Cloud Console
GOOGLE_CREDENTIALS_PATH=./credentials/google-oauth.json
GOOGLE_TOKEN_PATH=./tokens/google-token.json

# === Jira ===
# Get API token from: https://id.atlassian.com/manage-profile/security/api-tokens
JIRA_HOST=https://your-domain.atlassian.net
JIRA_EMAIL=your-email@example.com
JIRA_API_TOKEN=your-jira-api-token

# === Asana ===
# Get token from: https://app.asana.com/0/developer-console
ASANA_ACCESS_TOKEN=your-asana-token

# === Google Sheets (Business Metrics) ===
# Spreadsheet ID from URL: https://docs.google.com/spreadsheets/d/{SPREADSHEET_ID}/edit
METRICS_SPREADSHEET_ID=your-spreadsheet-id
METRICS_SHEET_NAME=Metrics

# === Analysis Thresholds ===
STALE_INCIDENT_DAYS=7
REPLY_SUGGESTION_DELAY_HOURS=24
