# PWI - Personal Work Intelligence System
# Copy to .env and fill in values: cp .env.example .env

# === Google Workspace (Chat, Calendar, Drive, Sheets) ===
# Download OAuth credentials from Google Cloud Console
GOOGLE_CREDENTIALS_PATH=./tokens/google-oauth.json
# Auto-generated after first OAuth flow
GOOGLE_TOKEN_PATH=./tokens/google-token.json
# Space/room IDs to monitor (comma-separated)
GOOGLE_CHAT_SPACES=
# Calendar IDs to track (comma-separated, default: primary)
GOOGLE_CALENDAR_IDS=primary
# Drive folder IDs for transcript search (comma-separated)
GOOGLE_DRIVE_FOLDER_IDS=
# Spreadsheet ID from URL: https://docs.google.com/spreadsheets/d/{ID}/edit
METRICS_SPREADSHEET_ID=
METRICS_SHEET_NAME=Metrics

# === Jira ===
# Get API token from: https://id.atlassian.com/manage-profile/security/api-tokens
JIRA_HOST=your-domain.atlassian.net
JIRA_EMAIL=your@email.com
JIRA_API_TOKEN=
# JQL filter for relevant projects (optional)
JIRA_JQL_FILTER=

# === Asana ===
# Get token from: https://app.asana.com/0/developer-console
ASANA_ACCESS_TOKEN=
# Workspace GID (required)
ASANA_WORKSPACE_GID=
# Project GIDs to monitor (comma-separated)
ASANA_PROJECT_GIDS=

# === Slack (optional) ===
SLACK_BOT_TOKEN=
SLACK_APP_TOKEN=
# Channel IDs to monitor (comma-separated)
SLACK_CHANNEL_IDS=

# === Email / IMAP (optional) ===
IMAP_HOST=imap.gmail.com
IMAP_PORT=993
IMAP_USER=
IMAP_PASSWORD=
# Folders to scan (comma-separated)
IMAP_FOLDERS=INBOX

# === Analysis Thresholds ===
PWI_STALE_THRESHOLD_DAYS=7
PWI_REPLY_DELAY_HOURS=24
PWI_AUTO_EXECUTE_THRESHOLD=0.8
PWI_NOTIFY_THRESHOLD=0.7
PWI_MAX_PARALLEL_WORKERS=5
PWI_LOG_LEVEL=INFO

# === Paths ===
PWI_GRAPH_DB_PATH=./graph/pwi.db
PWI_DATA_DIR=./data
